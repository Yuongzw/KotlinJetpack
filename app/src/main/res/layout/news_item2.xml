<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <TextView
        android:id="@+id/news_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="王者荣耀：大神爱不释手的三款皮肤，凤求凰上榜！"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_image2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/news_image3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
             />

        <ImageView
            android:id="@+id/news_image4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_author2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王者荣耀官网" />

        <TextView
            android:id="@+id/news_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="2019-12-10 10:25" />

    </LinearLayout>

</LinearLayout>
